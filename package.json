{
  "name": "little-site",
  "version": "1.0.0",
  "description": "littlemooon.com website",
  "author": "fredwright0@gmail.com",
  "license": "MIT",
  "engines": {
    "node": "10.x.x"
  },
  "scripts": {
    "dev": "sapper dev",
    "dev:debug": "npx ndb npm run dev",
    "build": "sapper build",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "lint": "eslint --fix . --ext .js,.svelte",
    "check": "npx npm-check -u",
    "deploy": "now -e SAPPER_TIMESTAMP=$(date +%s%3N)",
    "deploy:prod": "now --prod -e SAPPER_TIMESTAMP=$(date +%s%3N)",
    "logs": "now logs -f little-site.littlemooon.now.sh"
  },
  "browserslist": [
    "last 3 version"
  ],
  "dependencies": {
    "@now/node": "^1.0.0",
    "compression": "^1.7.4",
    "dotenv": "^8.1.0",
    "polka": "^0.5.2",
    "sirv": "^0.4.2",
    "sirv-cli": "^0.4.4"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.6.1",
    "cssnano": "^4.1.10",
    "eslint": "^6.5.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.36",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-url": "^8.0.0",
    "prettier": "^1.18.2",
    "prettier-plugin-svelte": "^0.7.0",
    "purgecss-from-svelte": "^2.0.2",
    "rollup": "^1.22.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-livereload": "^1.0.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-terser": "^5.1.2",
    "sapper": "^0.27.9",
    "svelte": "^3.12.1",
    "svelte-preprocess": "^3.1.2",
    "tailwindcss": "^1.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/little-site/little-site.git"
  },
  "bugs": {
    "url": "https://github.com/little-site/little-site/issues"
  },
  "homepage": "https://github.com/little-site/little-site#readme",
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module",
      "project": "tsconfig.json"
    },
    "plugins": [
      "svelte3"
    ],
    "extends": [
      "plugin:svelte/recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ]
  },
  "eslintIgnore": [
    "**/node_modules/**",
    "/cypress/screenshots/",
    "/__sapper__/"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "keywords": [
    "now",
    "sapper",
    "svelte",
    "tailwind",
    "tailwindcss",
    "eslint",
    "prettier",
    "rollup"
  ]
}
